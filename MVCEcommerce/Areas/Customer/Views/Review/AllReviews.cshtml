@model ProductViewModel
@{
    Layout = null;
}


<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Review - @Model.Product.Name</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2>Feedbacks - @Model.Product.Name</h2>

        @if (Model.Reviews.Any())
        {
            <ul class="list-group">
                @foreach (var review in Model.Reviews)
                {
                    <li class="list-group-item">
                        <strong>@review.Author</strong> <small>(@review.Rating ★)</small>
                        <p>@review.Content</p>
                    </li>
                }
            </ul>
        }
        else
        {
            <p>There are no reviews yet. Be first!</p>
        }

        <button onclick="window.close();" class="btn btn-secondary mt-3">Close</button>
    </div>
</body>

