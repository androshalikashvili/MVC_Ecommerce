@model MVCEcommerce.Models.ViewModels.RegisterVM

@{
    ViewData["Title"] = "Register";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py4">
        <div class="row">
            <div class=" col-12 text-center">
                <h2 class="py-2 text-white">Register</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-3">
            <div class="col-md-12">
                <form asp-action="Register" method="post">
                    <h3 class="border-bottom pb-3 mb-4 text-secondary text-center">Create a new account</h3>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="FirstName" class="form-control" placeholder="" />
                        <label asp-for="FirstName" class="control-label"></label>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="LastName" class="form-control" placeholder="" />
                        <label asp-for="LastName" class="control-label"></label>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" placeholder="" />
                        <label asp-for="Email" class="control-label"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Password" type="password" class="form-control" placeholder="" />
                        <label asp-for="Password" class="control-label"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="" />
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-success">Register</button>
                    </div>
                    <div class="form-group mt-3">
                        @* <span asp-area="Customer" asp-controll="Index" class="btn btn-primary">Cancel</span> *@
                        <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>




@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
